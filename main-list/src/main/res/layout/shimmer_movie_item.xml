<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shimerPoster"
        style="@style/ShapeAppearance.RoundedImageView.15.Percent"
        android:layout_width="100dp"
        android:layout_height="135dp"
        android:background="@color/grey_2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerTitle"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_rounded_10"
        android:backgroundTint="@color/grey_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimerPoster"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerVoteAverage"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rounded_10"
        android:backgroundTint="@color/grey_2"
        android:drawablePadding="4dp"
        app:layout_constraintStart_toEndOf="@id/shimerPoster"
        app:layout_constraintTop_toBottomOf="@id/shimmerTitle" />

    <View
        android:id="@+id/shimmerOverview1"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_rounded_10"
        android:backgroundTint="@color/grey_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimerPoster"
        app:layout_constraintTop_toBottomOf="@id/shimmerVoteAverage" />

    <View
        android:id="@+id/shimmerOverview2"
        android:layout_width="150dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_rounded_10"
        android:backgroundTint="@color/grey_2"
        app:layout_constraintStart_toEndOf="@id/shimerPoster"
        app:layout_constraintTop_toBottomOf="@id/shimmerOverview1" />

</androidx.constraintlayout.widget.ConstraintLayout>